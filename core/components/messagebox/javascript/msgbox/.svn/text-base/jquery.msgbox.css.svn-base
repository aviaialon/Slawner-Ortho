.jquery-msgbox
{
  background:url(/component/messagebox/javascript/msgbox/images/background.png) repeat-x left bottom;
  padding-bottom:55px;
}

.jquery-msgbox-wrapper
{
  padding:20px 20px 20px 100px;
}

.jquery-msgbox-buttons
{
  padding:15px;
  text-align:right;
  position:absolute;
  bottom:0;
  right:0;
}

.jquery-msgbox-buttons button,
.jquery-msgbox-buttons input
{
  margin-left:10px;
  min-width:85px;
  cursor:pointer;
}

.jquery-msgbox-inputs
{
  margin-top:4px;
}

.jquery-msgbox-inputs input
{
  display:block;
  padding:3px 2px;
  border:1px solid #dddddd;
  margin:3px 0 6px 0;
  width:95%;
}

.jquery-msgbox-label
{
  font-weight:bold;
  font-size:11px;
}

.jquery-msgbox-alert
{
  background: url(/component/messagebox/javascript/msgbox/images/alert.png) no-repeat 20px 20px;
}

.jquery-msgbox-info
{
  background: url(/component/messagebox/javascript/msgbox/images/info.png) no-repeat 20px 20px;
}

.jquery-msgbox-error
{
  background: url(/component/messagebox/javascript/msgbox/images/error.png) no-repeat 20px 20px;
}

.jquery-msgbox-prompt
{
  background: url(/component/messagebox/javascript/msgbox/images/question.png) no-repeat 20px 20px;
}

.jquery-msgbox-lock
{
  background: url(/component/messagebox/javascript/msgbox/images/lock.png) no-repeat 0px 20px;
}

.jquery-msgbox-confirm
{
  background: url(/component/messagebox/javascript/msgbox/images/confirm.png) no-repeat 20px 20px;
}

#msg-box-form a {
	color:#333;
	font-size:11px;
	font-weight:normal;
	font-family:Arial, Helvetica, sans-serif;
	text-decoration:none;
	padding-top:6px;
}
#msg-box-form a:active {
	color:#333;
	font-size:11px;
	font-weight:normal;
	font-family:Arial, Helvetica, sans-serif;
	text-decoration:none;
	padding-top:6px;
}
#msg-box-form a:hover {
	color:#990000;
	font-size:11px;
	font-weight:normal;
	font-family:Arial, Helvetica, sans-serif;
	text-decoration:none;
	padding-top:6px;
}